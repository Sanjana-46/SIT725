<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Members</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Join dKin Caps</h1>
  <form action="/add-member" method="POST">
    <input name="name" placeholder="Name" required><br>
    <input name="email" placeholder="Email" required><br>
    <input name="capSize" placeholder="Cap Size" required><br>
    <input name="designChoice" placeholder="Design Choice" required><br>
    <button type="submit">Submit</button>
  </form>

  <h2>Registered Members</h2>
  <ul>
    <% members.forEach(member => { %>
      <li><%= member.name %> | <%= member.email %> | <%= member.capSize %> | <%= member.designChoice %></li>
    <% }) %>
  </ul>
</body>
</html>
